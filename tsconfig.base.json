{
  "compileOnSave": false,
  "compilerOptions": {
    "noImplicitOverride": true,
    "allowJs": true,
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "module": "es2020",
    "lib": ["es2019", "dom"],
    "paths": {
      "@js-camp/*": ["libs/*"],
      "@js-camp/react/store": ["apps/react/src/store/"],
      "@js-camp/react/store/*": ["apps/react/src/store/*"]
    }
  },
  "exclude": ["node_modules", "tmp"],
  "include": ["**/*.js", "**/*.ts"]
}
